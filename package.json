{
  "name": "setup-node-typescript",
  "version": "0.0.1",
  "description": "Just a setup for typescript and node backend development",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "prettier": "npx prettier --config .prettierrc --write \"src/**/*.ts\""
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "Typescript",
    "Nodejs",
    "API",
    "Javascript"
  ],
  "author": "Raniel Sobrinho",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "4.2.3"
  }
}
